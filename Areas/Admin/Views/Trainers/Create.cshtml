@model FitnessCenterProject.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
}

<div class="card shadow-sm col-md-6 mx-auto">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">Yeni Antrenör Oluştur</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Specialty" class="form-label"></label>
                <input asp-for="Specialty" class="form-control" placeholder="Örn: Kilo Verme, Kas Geliştirme" />
                <span asp-validation-for="Specialty" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="WorkingHours" class="form-label"></label>
                <input asp-for="WorkingHours" class="form-control" placeholder="Örn: 09:00 - 18:00" />
                <span asp-validation-for="WorkingHours" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Verdiği Hizmet</label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId">
                    <option value="">-- Hizmet Seçiniz --</option>
                </select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>