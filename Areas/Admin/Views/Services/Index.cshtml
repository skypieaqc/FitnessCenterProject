@model IEnumerable<FitnessCenterProject.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Hizmet Yönetimi</h2>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Hizmet Adı</th>
            <th>Süre (Dk)</th>
            <th>Ücret</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DurationMinutes</td>
                <td>@item.Price.ToString("C2")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>