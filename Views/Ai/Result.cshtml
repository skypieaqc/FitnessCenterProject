@{
    ViewData["Title"] = "AI Tavsiyesi";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary"><i class="bi bi-stars"></i> Gemini AI Analizi</h1>
        <p class="lead text-muted">Google yapay zekası tarafından hazırlanan kişisel planınız.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-info shadow-sm">
                <div class="card-header bg-info text-dark text-center">
                    <h5 class="mb-0">Vücut Analiziniz</h5>
                </div>
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <h2 class="display-3 fw-bold">@ViewBag.Bmi</h2>
                    <p class="text-muted">Vücut Kitle İndeksi (BMI)</p>
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-4">
            <div class="card h-100 border-primary shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-chat-square-text"></i> Uzman Tavsiyesi</h5>
                </div>
                <div class="card-body">
                    <div class="card-text">
                        @Html.Raw(ViewBag.AiResponse)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">Yeni Sorgu</a>
        <a asp-controller="Appointments" asp-action="Index" class="btn btn-success">Randevu Al</a>
    </div>
</div>