@model IEnumerable<FitnessCenterProject.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörler";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Antrenör Yönetimi</h3>
        <a asp-action="Create" class="btn btn-light text-primary fw-bold">
            <i class="bi bi-person-plus-fill"></i> Yeni Antrenör Ekle
        </a>
    </div>
    <div class="card-body">
        <table class="table table-hover table-bordered table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Ad Soyad</th>
                    <th>Uzmanlık</th>
                    <th>Verdiği Hizmet</th>
                    <th>Çalışma Saatleri</th>
                    <th style="width: 150px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.FullName</td>
                        <td>@item.Specialty</td>
                        <td>
                            @if (item.Service != null)
                            {
                                <span class="badge bg-info text-dark">@item.Service.Name</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Hizmet Yok</span>
                            }
                        </td>
                        <td>@item.WorkingHours</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white">
                                    Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                Henüz sisteme kayıtlı bir antrenör bulunmamaktadır.
            </div>
        }
    </div>
</div>